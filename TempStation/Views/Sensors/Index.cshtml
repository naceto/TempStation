@using Newtonsoft.Json;
@using TempStation.Models.ViewModels.Sensors;
@model List<UserSensorsViewModel>;
@{
    ViewData["Title"] = "My Sensors";
}
<h4>@ViewData["Title"]</h4>
<div class="container row p-0 m-0">
    <div class="col-2">
        <a asp-page="AddSensor" class="btn btn-info form-control text-white">Add New Sensor</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Count > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="FirstOrDefault().Id"></label>
                        </th>
                        <th>
                            <label asp-for="FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="FirstOrDefault().MacAddress"></label>
                        </th>
                        <th>
                            View Data
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.MacAddress)
                            </td>
                            <td>
                                <button asp-page-handler="View" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                    View Data
                                </button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Sensors Available.</p>
            }
        </form>
    </div>
</div>
